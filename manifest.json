{
  "manifest_version": 3,
  "name": "AI Dictionary for Chromium",
  "version": "1.0.0",
  "description": "Adds a context menu item to bring up an AI dictionary popup",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-32.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "commands"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["config.js", "content.js", "overlay.js", "api.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "commands": {
    "define-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Show dictionary popup for current selection"
    }
  }
}
